<div style="width:80%;margin:0 auto;">
    <h1>Editar Datos</h1>
    <%= form_for(@alumno) do |f| %>
        <% @alumno.errors.full_messages.each do |message| %>
            <div class="be-red white top-space">
                * <%= message %>
            </div>
        <%end%>
        <div class="field">
            <%= f.text_field :nombre, placeholder: "Nombres", class:"form-control"%>
        </div>
        <div class="field">
            <%= f.submit "Guardar", class:"btn be-red white " %>
        </div>
    <%end%>
</div>