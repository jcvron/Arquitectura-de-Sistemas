<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
<% if user_signed_in? %>
    <h1><%= @profe.nombre %></h1>
        <div class="field">
            Rut: <%= @profe.rut %>
        </div>
        <div class="field">
           Correo: <%= @profe.user.email %>
        </div>
        <div class="field">
            Calificaci√≥n Estudiantes(1-10): <%= @profe.calificacion %>
        </div>
        
        <%if current_user.teacher %>
        <ul>
            <h2>Comentarios:</h2>
            <% @profe.comments.each do |comment| %>
            <li>
              <%= comment.body %>
            </li>
            <%end%>
          </ul>
        <%else%>
        <div class="field">
            <h3>Comentarios</h3>
            <%= render "comments/form" %>
        <li class="btn be-red white field">
          <%= link_to ' Calificar Profesor',  controller: "profesors", action: "edit", id: @profe%>
        </li>
        <%end%>
<%end%>